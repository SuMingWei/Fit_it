<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_90"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.93"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/horizontal_90"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_25"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/horizontal_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/vertical_10"
        app:layout_constraintRight_toRightOf="@id/vertical_90"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/white_form"
            >
            <ImageView
                android:id="@+id/intro_iv1"
                android:layout_marginTop="70dp"
                android:src="@drawable/introduction_up1"
                android:layout_width="280dp"
                android:layout_height="140dp"/>
            <ImageView
                android:id="@+id/intro_iv2"
                android:src="@drawable/introduction_up2"
                android:layout_width="280dp"
                android:layout_height="140dp"/>
            <ImageView
                android:id="@+id/intro_iv3"
                android:src="@drawable/introduction_up8"
                android:layout_width="280dp"
                android:layout_height="130dp"/>
            <TextView
                android:id="@+id/counter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="10"
                android:textSize="40dp"
                android:textColor="@color/whitesmoke"
                android:gravity="center"
                android:background="@drawable/counter0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/intro_next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="略過介紹>>"
                    android:textSize="25dp"
                    android:textColor="@color/green_txt"
                    android:gravity="right"
                    android:background="#00000000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:src="@drawable/pop_upper1"
        android:id="@+id/intro_title_iv"
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/vertical_10"
        app:layout_constraintRight_toRightOf="@id/vertical_90"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_20"
        />
</androidx.constraintlayout.widget.ConstraintLayout>