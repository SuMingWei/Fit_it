<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_without_text"
    tools:context=".ExerciseFragment">

    <!--    horizontal_line-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_35"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/horizontal_85"
        app:layout_constraintGuide_percent="0.85"/>
    <!--    vertical_line-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/vertical_90"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/vertical_10"/>

    <!--Title-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="任務"
        android:background="@drawable/title_form"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_15"
        app:layout_constraintLeft_toLeftOf="@id/vertical_20"
        app:layout_constraintRight_toRightOf="@id/vertical_80"/>
    <!--Doggy conversation-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/horizontal_15"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_30"
        app:layout_constraintRight_toRightOf="@id/vertical_90"
        app:layout_constraintLeft_toLeftOf="@id/vertical_10">
        <ImageView
            android:id="@+id/dog_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/conversation" />
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/talk_form"
            android:textSize="20dp"
            android:text="下滑看更多運動唷！"
            android:gravity="center"/>

    </LinearLayout>
    <!--Exervise scrollview-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/scrollview_form"
        android:scrollbars = "vertical"
        android:scrollbarSize="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/vertical_10"
        app:layout_constraintRight_toRightOf="@id/vertical_90"
        app:layout_constraintTop_toTopOf="@id/horizontal_35"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_85">
        <!--        android:layout_marginBottom="100dp"-->
        <!--        android:layout_marginTop="220dp">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/testbtn"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:weightSum="5"
                android:background="@drawable/title_form"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/upper1"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:textColor="@color/whitesmoke"
                    android:text="Demo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:textColor="@color/whitesmoke"
                    android:layout_marginRight="20dp"
                    android:text="3/3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upperlimb_btn"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:weightSum="5"
                android:background="@drawable/title_form"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/upper1"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_weight="3"
                    android:textColor="@color/whitesmoke"
                    android:text="上肢肌力"/>
                <TextView
                    android:id="@+id/upperlimbNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="end"
                    android:layout_weight="2"
                    android:textColor="@color/whitesmoke"
                    android:layout_marginLeft="10dp"
                    android:text="13/3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lowerlimb_btn"
                android:weightSum="5"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_form"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/lower1"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:textColor="@color/whitesmoke"
                    android:text="下肢肌力"/>
                <TextView
                    android:id="@+id/lowerlimbNum_tv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/whitesmoke"
                    android:text="3/3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/softness_btn"
                android:weightSum="5"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_form"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/softness1"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/whitesmoke"
                    android:text="柔軟訓練"
                    />
                <TextView
                    android:id="@+id/softnessNum_tv"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="end"
                    android:textColor="@color/whitesmoke"
                    android:layout_marginRight="20dp"
                    android:text="3/3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endurance_btn"
                android:weightSum="5"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_form"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/indurance1"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/whitesmoke"
                    android:text="心肺訓練"/>
                <TextView
                    android:id="@+id/enduranceNum_tv"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="end"
                    android:textColor="@color/whitesmoke"
                    android:layout_marginRight="20dp"
                    android:text="3/3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upperRope_btn"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:weightSum="5"
                android:background="@drawable/title_form"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/upper3"/>
                <TextView
                    android:layout_weight="3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/whitesmoke"
                    android:text="彈力繩\n上肢訓練"/>
                <TextView
                    android:id="@+id/upperRopeNum_tv"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="end"
                    android:textColor="@color/whitesmoke"
                    android:layout_marginRight="20dp"
                    android:text="3/3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lowerRope_btn"
                android:weightSum="5"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/title_form"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/lower2"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/whitesmoke"
                    android:text="彈力繩\n下肢訓練"/>
                <TextView
                    android:id="@+id/lowerRopeNum_tv"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/whitesmoke"
                    android:layout_marginRight="20dp"
                    android:gravity="end"
                    android:text="3/3"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
