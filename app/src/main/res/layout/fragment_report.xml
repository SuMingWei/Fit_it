<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wheat"
    tools:context=".PetFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_35"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_65"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_85"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_95"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/tan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_15"
        app:layout_constraintLeft_toLeftOf="@id/vertical_10"
        app:layout_constraintRight_toRightOf="@id/vertical_90">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/dark_tan"
            android:text="週報"
            android:background="@drawable/report_title_form"
            android:elevation="10dp"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/left_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/tan"
                android:textSize="26dp"
                android:textColor="@color/wheat"
                android:text="◀" />

            <TextView
                android:id="@+id/choose_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:background="@color/tan"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="2021/12/12~2021/12/31" />

            <Button
                android:id="@+id/right_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/tan"
                android:textSize="26dp"
                android:textColor="@color/wheat"
                android:text="▶"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/horizontal_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/horizontal_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="您這週的活動時長為"
                android:gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/total_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/highlight_word"
                android:textColor="@color/white"
                android:text="10 分鐘"
                android:gravity="center"
                android:textSize="18dp"/>

        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars = "vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="5dp"
        app:layout_constraintLeft_toLeftOf="@id/vertical_5"
        app:layout_constraintRight_toRightOf="@id/vertical_95"
        app:layout_constraintTop_toTopOf="@id/horizontal_65"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_85">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- upper limb -->
            <LinearLayout
                android:id="@+id/upperlimb_background"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:weightSum="5"
                android:gravity="center"
                android:background="@drawable/complete_card_form"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/upperlimb_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/hit_standard"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:text="上肢肌力"/>

                    <TextView
                        android:id="@+id/upperlimb_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="快達到上肢肌力訓練量，加油！"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/upperlimb_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="30 分鐘"/>

            </LinearLayout>

            <!-- lower limb -->
            <LinearLayout
                android:id="@+id/lowerlimb_background"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:weightSum="5"
                android:gravity="center"
                android:background="@drawable/complete_card_form"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lowerlimb_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/over_standand"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:text="下肢肌力"/>

                    <TextView
                        android:id="@+id/lowerlimb_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="已達到下肢肌力訓練量，讚！"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/lowerlimb_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="120 分鐘"/>

            </LinearLayout>

            <!-- softness -->
            <LinearLayout
                android:id="@+id/softness_background"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:weightSum="5"
                android:gravity="center"
                android:background="@drawable/failed_card_form"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/softness_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/miss_standand"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:text="柔軟訓練"/>

                    <TextView
                        android:id="@+id/softness_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="您的柔軟訓練可能不足，可以多加強這項"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/softness_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="15 分鐘"/>

            </LinearLayout>

            <!-- endurance -->
            <LinearLayout
                android:id="@+id/endurance_background"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:weightSum="5"
                android:gravity="center"
                android:background="@drawable/failed_card_form"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/endurance_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/miss_standand"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:text="耐力訓練"/>

                    <TextView
                        android:id="@+id/endurance_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="您的耐力訓練可能不足，可以多加強這項"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/endurance_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="0 分鐘"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14dp"
        android:text="▼下滑查看更多..."
        app:layout_constraintLeft_toLeftOf="@id/vertical_5"
        app:layout_constraintRight_toRightOf="@id/vertical_95"
        app:layout_constraintTop_toTopOf="@id/horizontal_85"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_90"/>

</androidx.constraintlayout.widget.ConstraintLayout>